{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "principale",
					"color": "#404040",
					"name": "Principale"
				},
				{
					"slug": "secondaire",
					"color": "#767676",
					"name": "Secondaire"
				},
				{
					"slug": "tertiaire",
					"color": "#ffffff",
					"name": "Tertiaire"
				},
				{
					"slug": "bleu-tres-fonce",
					"color": "#23282d",
					"name": "Bleu très foncé"
				},
				{
					"slug": "gris-tres-leger",
					"color": "#eeeeee",
					"name": "Gris très léger"
				},
				{
					"slug": "gris-tres-fonce",
					"color": "#444444",
					"name": "Gris très foncé"
				},
				{
					"slug": "cyan-tres-fonce",
					"color": "#044f51",
					"name": "Cyan très foncé"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Regular.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Italic.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Bold.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-BoldItalic.ttf"
							]
						}
					],
					"fontFamily": "\"Noto Serif\",sans-serif",
					"name": "Noto Serif",
					"slug": "noto-serif"
				}
			],
			"fontSizes": [
				{
					"slug": "ultra-petite",
					"size": "0.857142857rem",
					"name": "Ultra petite"
				},
				{
					"slug": "petite",
					"size": "0.875rem",
					"name": "Petite"
				},
				{
					"slug": "moyenne",
					"size": "1rem",
					"name": "Moyenne"
				},
				{
					"slug": "grande",
					"size": "1.5rem",
					"name": "Grande"
				},
				{
					"slug": "tres-grande",
					"size": "2rem",
					"name": "Très grande"
				},
				{
					"slug": "ultra-grande",
					"size": "2.25rem",
					"name": "Ultra grande"
				}
			],
			"lineHeight": true
		},
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--tertiaire)",
			"text": "var(--wp--preset--color--principale)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--moyenne)",
			"fontFamily": "var(--wp--preset--font-family--noto-serif)",
			"lineHeight": "1.5"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "700"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--ultra-grande)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--grande)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--petite)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--bleu-tres-fonce)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondaire)"
					}
				}
			},
			"button": {
				"typography": {
					"fontWeight": "700",
					"fontSize": "1.2rem"
				},
				"color": {
					"background": "var(--wp--preset--color--bleu-tres-fonce)",
					"text": "#ffffff"
				},
				":hover": {
					"color": {
						"background": "#ffffff",
						"text": "var(--wp--preset--color--bleu-tres-fonce)"
					}
				},
				"border": {
					"radius": "0",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--bleu-tres-fonce)"
				},
				"shadow": "0 1px 2px rgba(64, 64, 64, 0.1)"
			}
		}
	}
}
